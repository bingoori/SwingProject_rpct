import java.awt.BorderLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JLabel;
import javax.swing.JLayeredPane;
import javax.swing.JPasswordField;

public class JPasswordTest {
	static JButton access = new JButton("»Æ¿Œ");
	static JLabel  id =new JLabel("ID : ");
	static JPasswordField password = new JPasswordField(20); 
	static JLayeredPane panel = new JLayeredPane();
	public static void main(String[] args) {
		JDialog test = new JDialog();
		test.setSize(300, 200);
		panel.setSize(300,250);
		id.setBounds(20, 20, 50, 50);
		password.setBounds(50, 35, 150, 20);
		panel.add(id);
		panel.add(password);
		access.setSize(300, 50);
		test.add(panel,BorderLayout.CENTER);
		test.add(access,BorderLayout.SOUTH);
		test.setVisible(true);
		
		access.addActionListener(new ActionListener() {
			
			@Override
			public void actionPerformed(ActionEvent e) {
				String pass =password.getPassword();
				
			}
		});
	}
}
